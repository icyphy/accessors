<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.berkeley.sesame" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sesame</name>
    <description>
        A sample application that demonstrate the use of accessors on mobile devices
    </description>
    <author email="victor.nouvellet@berkeley.edu" href="http://icyphy.org">
        iCyPhy Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-ble" spec="~2.0.1" />
    <plugin name="cordova-plugin-http" spec="~1.2.0" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
